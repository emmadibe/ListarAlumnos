<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ListadoAlumnos.ViewMolders"
             x:Class="ListadoAlumnos.Views.Alumnos"
             x:DataType="vm:AlumnoViewModels">
    <VerticalStackLayout>
        <Entry Text="{Binding textApellido}"/>
        <Entry Text="{Binding textNombre}"/>
        <Button Text="Guardar" Command="{Binding guardarAlumnoCommand}"/>
    </VerticalStackLayout>
</ContentView>
